<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EvaluateActivity">
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="79dp"
        android:text="" />
    <TextView
        android:id="@+id/txtETitle"
        android:layout_width="match_parent"
        android:layout_height="79dp"
        android:background="@color/teal_700"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:text="Đánh giá" />
    <EditText
        android:id="@+id/txtEEmail"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        android:importantForAutofill="no" />
    <Spinner
        android:id="@+id/spEDoctor"
        android:layout_width="match_parent"
        android:layout_height="76dp" />
    <EditText
        android:id="@+id/txtEEvaluateDate"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Ngày đánh giá"
        android:inputType="date"
        android:importantForAutofill="no" />
    <Spinner
        android:id="@+id/spEvaluate"
        android:layout_width="match_parent"
        android:layout_height="76dp" />
    <EditText
        android:id="@+id/txtEComment"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Bình luận"
        android:inputType="text"
        android:importantForAutofill="no" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnECancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:text="@string/cancel" />

        <Button
            android:id="@+id/btnEAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Đánh giá" />
    </LinearLayout>
</LinearLayout>