<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgDLPAvatar"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            app:srcCompat="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:orientation="vertical"
            android:paddingStart="16dp">

            <TextView
                android:id="@+id/txtDLPFullName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Full name"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtDLPDateOfBirth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date of birth"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtDLPGender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtDLPAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Address"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtDLPCountry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Country"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtDLPPhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phone number"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtDLPEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtDLPSick"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bệnh:"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtDLPDoctor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bác sĩ:"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtDLPMEDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ngày khám:"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtDLPStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chờ xử lý"
                android:textSize="16sp"
                android:gravity="center"
                android:paddingTop="16dp" />

            <Button
                android:id="@+id/btnDLPConfirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/confrim"
                android:layout_marginTop="16dp"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
