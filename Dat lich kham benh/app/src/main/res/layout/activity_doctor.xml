<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DoctorActivity">
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="79dp"
        android:text="" />
    <ImageView
        android:id="@+id/imgDLogo"
        android:layout_width="match_parent"
        android:layout_height="93dp"
        android:src="@drawable/logo"
        android:importantForAccessibility="no" />
    <TextView
        android:id="@+id/txtDTitle"
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:layout_marginTop="10dp"
        android:background="@color/teal_700"
        android:gravity="center"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:text="Bác sĩ" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="79dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnDListMedicalExaminationForm"
            android:layout_width="wrap_content"
            android:layout_height="62dp"
            android:layout_weight="1"
            android:text="Danh sách phiếu khám" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="79dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnDEvaluate"
            android:layout_width="wrap_content"
            android:layout_height="62dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:text="Đánh giá" />

        <Button
            android:id="@+id/btnDLogout"
            android:layout_width="wrap_content"
            android:layout_height="62dp"
            android:layout_weight="1"
            android:text="Đăng xuất" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="79dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnDMEInfor"
            android:layout_width="wrap_content"
            android:layout_height="67dp"
            android:layout_marginEnd="10dp"
            android:text="Thêm thông tin khám" />
        <Button
            android:id="@+id/btnDListFeedback"
            android:layout_width="wrap_content"
            android:layout_height="67dp"
            android:layout_weight="1"
            android:text="Phản hồi" />
    </LinearLayout>

</LinearLayout>